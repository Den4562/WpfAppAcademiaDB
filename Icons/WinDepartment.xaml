<Window x:Class="WpfAppAcademia.Icons.WinDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAcademia.Icons"
        mc:Ignorable="d"
        Title="WinDepartment" Height="280" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Имя отдела" />
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <Label Content="Финансирование" />
            <TextBox x:Name="FinancingTextBox" Margin="0,0,0,10"/>

            <Button Margin="10" Content="Добавить" Width="100" HorizontalAlignment="Left" Click="AddDepartment_Click" />
            <Button Margin="120,-50,0,0" Content="Вернутся" Width="100" HorizontalAlignment="Left" Click="MainWin_Click" />
        </StackPanel>
    </Grid>
</Window>